---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import AgentActivityLog from '@/components/AgentActivityLog.astro';
import { Database, FileCode, Search } from 'lucide-react';

// --- SERVER-SIDE DATA FETCHING (Frontmatter) ---
// In a real app, this would be: await db.select().from(events)...
const mockEvents = [
  { 
    id: '1', 
    agent: 'Orchestrator' as const, 
    action: 'Initializing Research Swarm', 
    timestamp: '10:42:01', 
    status: 'info' as const
  },
  { 
    id: '2', 
    agent: 'RepoAnalyst' as const, 
    action: 'Parsing prisma.schema', 
    target: 'apps/api/db/schema.prisma', 
    timestamp: '10:42:05', 
    status: 'success' as const
  },
  { 
    id: '3', 
    agent: 'StyleScout' as const, 
    action: 'Browsing Shadcn Registry', 
    target: 'https://ui.shadcn.com/docs/components/data-table', 
    timestamp: '10:42:12', 
    status: 'info' as const
  },
  { 
    id: '4', 
    agent: 'Architect' as const, 
    action: 'Drafting Wireframe', 
    target: 'Dashboard View v1.0', 
    timestamp: '10:42:45', 
    status: 'warning' as const
  },
];

const recentProjects = [
  { name: 'Core UX Researcher', status: 'Active', updated: '2m ago' },
  { name: 'SaaS Starter Kit', status: 'Idle', updated: '4h ago' },
  { name: 'Internal Tools', status: 'Archived', updated: '2d ago' },
];
---

<DashboardLayout 
  title="Mission Control" 
  breadcrumbs={[{ label: 'Home', href: '/' }, { label: 'Projects', href: '/' }]}
>

  <div slot="agent-stream">
    <AgentActivityLog events={mockEvents} />
  </div>

  <div class="space-y-8 max-w-5xl mx-auto">
    
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold tracking-tight text-white">Active Deployments</h1>
        <p class="text-zinc-400 mt-2">Manage your autonomous research agents.</p>
      </div>
      <button class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors shadow-lg shadow-indigo-500/20">
        + New Swarm
      </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="p-6 rounded-xl border border-zinc-800 bg-zinc-950/50 hover:border-zinc-700 transition-colors">
        <div class="flex items-center gap-4">
          <div class="p-3 rounded-lg bg-emerald-500/10 text-emerald-500">
            <Database className="w-6 h-6" />
          </div>
          <div>
            <p class="text-sm font-medium text-zinc-500">Schemas Parsed</p>
            <p class="text-2xl font-bold text-white">24</p>
          </div>
        </div>
      </div>
      
      <div class="p-6 rounded-xl border border-zinc-800 bg-zinc-950/50 hover:border-zinc-700 transition-colors">
        <div class="flex items-center gap-4">
          <div class="p-3 rounded-lg bg-cyan-500/10 text-cyan-500">
            <Search className="w-6 h-6" />
          </div>
          <div>
            <p class="text-sm font-medium text-zinc-500">Components Found</p>
            <p class="text-2xl font-bold text-white">142</p>
          </div>
        </div>
      </div>

      <div class="p-6 rounded-xl border border-zinc-800 bg-zinc-950/50 hover:border-zinc-700 transition-colors">
        <div class="flex items-center gap-4">
          <div class="p-3 rounded-lg bg-amber-500/10 text-amber-500">
            <FileCode className="w-6 h-6" />
          </div>
          <div>
            <p class="text-sm font-medium text-zinc-500">Code Generated</p>
            <p class="text-2xl font-bold text-white">12k LoC</p>
          </div>
        </div>
      </div>
    </div>

    <div class="rounded-xl border border-zinc-800 bg-zinc-950/30 overflow-hidden">
      <div class="px-6 py-4 border-b border-zinc-800">
        <h3 class="font-semibold text-zinc-100">Recent Projects</h3>
      </div>
      <div class="divide-y divide-zinc-800/50">
        {recentProjects.map((project) => (
          <a href={`/project/${project.name.toLowerCase().replace(/\s+/g, '-')}`} class="flex items-center justify-between px-6 py-4 hover:bg-zinc-900/50 transition-colors group">
            <div class="flex items-center gap-4">
              <div class="w-2 h-2 rounded-full bg-indigo-500 shadow-[0_0_8px_rgba(99,102,241,0.5)]"></div>
              <span class="font-medium text-zinc-200 group-hover:text-white transition-colors">
                {project.name}
              </span>
            </div>
            <div class="flex items-center gap-6">
              <span class="text-xs font-mono text-zinc-500">{project.updated}</span>
              <span class="text-xs px-2 py-1 rounded-full bg-zinc-900 border border-zinc-800 text-zinc-400">
                {project.status}
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>

  </div>
</DashboardLayout>